<body>
    <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/add">Add product</a></li>
        <li><a href="/manage">Manage product</a></li>
        <li><a href="/logout">Logout</a></li>
    </ul>
    <center>
        <form class="frm123" action="/doEdit" enctype="multipart/form-data" method="POST">
            <fieldset>
                <legend> Update product </legend>
                <input type="hidden" required maxlength="100" size="35"
                    name="id" value="{{product._id}}"> 
                Name: <input type="text" required maxlength="100" size="35"
                    name="name" value="{{product.name}}"> <br> <br>
                Introduction: <input type="text" maxlength="100" size="12"
                    name="introduction" value="{{product.introduction}}"> <br> <br>
                Picture: <img src='/{{product.picture.id}}' alt="{{product.picture.id}}" width="250px" height="200px"><br>
                    <input type="file" name="picture" accept="image/*" > <br> <br>
                Price: <input type="number" required maxlength="100" size="12"
                    name="price" value="{{product.price}}"> <br> <br>
                <input type="submit" value="Update" name="update">
            </fieldset>
        </form>
    </center>
</body>
</html>